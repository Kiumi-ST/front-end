<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="@color/black">

    <!-- 좌측 메뉴 -->
    <include
        android:id="@+id/left_menu_card"
        layout="@layout/practice_left_menu"/>

    <!-- 상단 텍스트 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/left_menu_card"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맥도날드와 함께\n하루종일 든든한 하루"
            android:textSize="22dp"
            android:fontFamily="@font/jamsil_bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- 메인 컨텐츠 -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_toEndOf="@id/left_menu_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/menu_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 알아보기"
            android:fontFamily="@font/jamsil_bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/burger_set"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="버거 세트"
                android:textSize="15dp"
                android:fontFamily="@font/jamsil_bold"
                android:background="@drawable/button_background_gray"
                android:textColor="@color/black"
                android:drawableRight="@drawable/burger_icon"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/drinks"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/jamsil_bold"
                android:text="음료"
                android:background="@drawable/button_background_gray"
                android:textColor="@color/black"
                android:drawableRight="@drawable/drink_button_icon"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/spicy_chicken_burger"
                android:contentDescription="Spicy Chicken Burger"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sriracha_burger"
                android:contentDescription="Sriracha Burger"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 하단 바 -->
    <include
        android:id="@+id/bottom_bar_card"
        layout="@layout/practice_bottom_bar"/>
</RelativeLayout>
