<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mcdonalds_logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="창녕 갈릭 버거"
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세트로 주문하시겠습니까?"
            android:textSize="24sp"
            android:textColor="#000"
            android:paddingTop="50dp"
            android:paddingBottom="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="30dp">

            <LinearLayout
                android:id="@+id/button_set"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:background="@drawable/blinking_border_animation"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/dine_in_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_burger_set"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트 선택"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_single"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:background="@drawable/button_background"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/take_out_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/changneung_gallic_burger"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:layout_margin="8dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단품 선택"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/burger_price_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￦6,600 674 Kcal"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="296dp"
            android:layout_height="30dp"
            android:text="취소"
            android:textColor="#000"
            android:background="@drawable/button_background" />
    </LinearLayout>
</LinearLayout>
