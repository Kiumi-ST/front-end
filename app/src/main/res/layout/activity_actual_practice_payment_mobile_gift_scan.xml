<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ActualPracticePaymentMobileGiftScan">

    <!-- 로고 -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mcdonalds_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모바일 상품권 바코드를\n스캔해 주세요"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewGiftCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_gift_card"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--    <Button-->
<!--        android:id="@+id/buttonNumberInput"-->
<!--        android:layout_width="163dp"-->
<!--        android:layout_height="44dp"-->
<!--        android:layout_marginTop="100dp"-->
<!--        android:background="@drawable/button_background"-->
<!--        android:text="번호 수기 입력"-->
<!--        android:textColor="#000000"-->
<!--        android:textSize="15sp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/imageViewGiftCard" />-->

    <Button
        android:id="@+id/buttonPreviousStep"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"
        android:text="이전단계"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewGiftCard" />

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="처음으로"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayoutHelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도움 기능"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:gravity="start"
        android:text="일일 영양 권장량은 보통 2,000 칼로리이지만\n필요한 칼로리는 다를 수 있습니다. 요청시 추가\n영양정보를 제공해 드립니다."
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footerLayout"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
