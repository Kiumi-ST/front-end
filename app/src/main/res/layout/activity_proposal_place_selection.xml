<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ActualPracticePlaceSelectionActivity">

    <!-- 상단 로고 -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_margin="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_mcdonalds_logo" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="식사 방법을\n선택해 주세요"
        android:textStyle="bold"

        android:textSize="35sp"
        android:textColor="#000"
        android:paddingTop="16dp"
        android:paddingBottom="20dp" />

    <!-- 매장 식사 / 테이크 아웃 선택 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="50dp">


        <LinearLayout
            android:id="@+id/button_dine_in"
            android:layout_width="135dp"
            android:layout_height="200dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"

                android:text="매장에서 식사"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/dine_in_image"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:src="@drawable/ic_dinein" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_take_out"
            android:layout_width="135dp"
            android:layout_height="200dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포장"
                android:textSize="20sp"
                android:textStyle="bold"

                android:textColor="#000" />

            <ImageView
                android:id="@+id/take_out_image"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:src="@drawable/ic_takeout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/language_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_language" />

        <TextView
            android:id="@+id/language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="언어 선택"
            android:textSize="20sp"
            android:textColor="#000"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- 영어 / 한국어 선택 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <!--영어 버튼 비활성화-->
        <Button
            android:id="@+id/button_english"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_background"
            android:enabled="false"
            android:text="English"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000" />

        <Button
            android:id="@+id/button_korean"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background_selected"
            android:enabled="false"
            android:text="한국어"
            android:textStyle="bold"
            android:textSize="15sp"

            android:textColor="#000" />
    </LinearLayout>

    <!-- 하단 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="bottom">

        <!-- 처음으로, 도움 기능, 안내 문구 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="73dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonHome"
                    android:layout_width="105dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_background"
                    android:text="처음으로"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutHelp"
                    android:layout_width="105dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="도움 기능"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 포인트 적립 -->
        <LinearLayout
            android:id="@+id/button_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_orange"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="11dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_qr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="결제 전"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포인트를 적립하세요"
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_downarrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
