<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_bar_card"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_alignParentBottom="true"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 왼쪽 섹션 -->
        <LinearLayout
            android:id="@+id/left_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shopping_basket_icon"
                    android:contentDescription="McDonald's Logo"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩0"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/order_history"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="주문 내역"
                    android:background="@drawable/button_background_gray"
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/gotohome"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="처음으로"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:background="@drawable/button_background_gray"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="도움 기능"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/help_icon"
                    android:background="@drawable/button_background_gray"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일일 영양 권장량은 보통 2,000 칼로리이지만 필요한 칼로리는\n다를 수 있습니다. 요청시 추가 영양정보를 제공해 드립니다."
                android:textSize="8dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/qr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/qr_code_icon"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
