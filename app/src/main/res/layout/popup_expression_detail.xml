<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="217dp"
    android:orientation="vertical"
    android:background="@drawable/english_expression_popup_round"
    >
    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:scaleType="center"
        android:src="@drawable/eng_ex_x"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/english_expression_button_round"
            android:orientation="vertical"
            android:id="@+id/soldout"
            android:layout_marginLeft="30dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/eng_ex_soldout"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:id="@+id/engExPopUpImage"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/pink"
                android:gravity="center"
                android:textSize="15sp"
                android:text="솔드아웃"
                android:id="@+id/engExPopUpKorean"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:textSize="15sp"
                android:text="sold out"
                android:gravity="center"
                android:id="@+id/engExPopUpEnglish" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:textSize="17sp"
                android:text="뜻: 품절"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:id="@+id/engExPopUpMeaning" />

            <TextView
                android:layout_width="131dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:text="이 표시의 메뉴는\n 품절되어 선택할 수 없습니다."
                android:textSize="15dp"
                android:textAlignment="center"
                android:id="@+id/engExPopUpDescription"
                />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>