<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_background"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/single_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_burger_single" />

    <TextView
        android:id="@+id/single_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불고기 버거"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/single_price_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₩2,200 430 Kcal"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/button_nutrition_info"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="10dp"
        android:text="영양정보"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="#000"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_add_modify"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="30dp"
        android:textSize="14dp"
        android:text="재료추가/변경"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textColor="#000"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_decrease_quantity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textColor="#000"
            android:background="@drawable/button_background"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="1"
            android:textSize="14sp"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/button_background" />

        <Button
            android:id="@+id/button_increase_quantity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textColor="#000"
            android:background="@drawable/button_background"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="장바구니 추가"
        android:layout_gravity="center"
        android:background="@color/yellow"
        android:textColor="#000"
        android:padding="14dp"
        android:layout_marginTop="16dp" />
</LinearLayout>