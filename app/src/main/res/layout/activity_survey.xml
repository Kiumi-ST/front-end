<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:textSize="16dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toggleAnswerButton1_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="키오스크 만족도를 평가해 주세요."
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/toggleAnswerButton1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sound_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toggleAnswerButton2_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="키오스크 이용이 편리하신가요?"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/toggleAnswerButton2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sound_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroupQ2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/comfortable1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매우 불편하다" />

                        <RadioButton
                            android:id="@+id/comfortable2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="다소 불편하다" />

                        <RadioButton
                            android:id="@+id/comfortable3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="어느정도 편리하다" />

                        <RadioButton
                            android:id="@+id/comfortable4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매우 편리하다" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toggleAnswerButton3_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="키오스크 이용 시 불편한 점은\n무엇인가요?"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/toggleAnswerButton3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sound_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroupQ3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/uncom1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="추가 요청이 어렵다" />

                        <RadioButton
                            android:id="@+id/uncom2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="할인 / 포인트 적립이 어렵다" />

                        <RadioButton
                            android:id="@+id/uncom3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="분할 결제가 어렵다" />

                        <RadioButton
                            android:id="@+id/uncom4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="상품권 사용이 어렵다" />

                        <RadioButton
                            android:id="@+id/uncom5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="원하는 상품을 찾기 어렵다" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/toggleAnswerButton4_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="향후 실제로 이용하실 생각이\n있으신가요?"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/toggleAnswerButton4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sound_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroupQ4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/use1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="전혀 없다" />

                        <RadioButton
                            android:id="@+id/use2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="별로 없다" />

                        <RadioButton
                            android:id="@+id/use3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="약간 있다" />

                        <RadioButton
                            android:id="@+id/use4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매우 있다" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/toggleAnswerButton5_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개선점을 자유롭게 입력해주세요."
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/toggleAnswerButton5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sound_icon" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editTextTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:lines="5"
                    android:minLines="5"
                    android:maxLines="10"
                    android:gravity="start|top"
                    android:hint="여기에 입력하세요..."
                    android:background="@drawable/blue_text_border"
                    android:padding="10dp"
                    android:inputType="textMultiLine" />


            </LinearLayout>

            <!-- 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnfinish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_text_border"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:text="설문조사 완료하기" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
