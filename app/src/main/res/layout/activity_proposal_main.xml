<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="@color/black">

    <!-- 좌측 메뉴 -->
    <include
        android:id="@+id/left_menu_card"
        layout="@layout/practice_left_menu"/>

    <!-- 메인콘텐츠 -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/left_menu_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp">

        <FrameLayout
            android:id="@+id/menu_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 하단 바 -->
    <include
        android:id="@+id/bottom_bar_card"
        layout="@layout/proposal_bottom_bar"/>

    <!-- 팝업 -->
    <RelativeLayout
        android:id="@+id/popup_burger_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <include layout="@layout/popup_proposal_buger_selection" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_single_burger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#95FFFFFF"
        android:visibility="gone"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <include layout="@layout/popup_proposal_single_burger" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
