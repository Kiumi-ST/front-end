<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProposalSideMenuSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 상단 로고 및 타이틀 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mcdonalds_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맥스파이시® 상하이 버거 - 세트"
                    android:textSize="20dp"
                    android:fontFamily="@font/jamsil_bold"
                    android:textColor="#000"
                    android:paddingStart="8dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp">

            <!-- 좌측 진행 상황 -->
            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start">

                <!-- Set Size Selection -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_circle_checked_yellow" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="35dp"
                            android:background="@color/yellow" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="세트 크기 선택"
                        android:textSize="10dp"
                        android:paddingStart="8dp"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Side Selection -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_circle_checked_yellow" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="35dp"
                            android:background="@color/yellow" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사이드 선택"
                        android:textSize="10dp"
                        android:paddingStart="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Drink Selection -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_circle_filled_yellow" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="35dp"
                            android:background="@color/yellow" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="음료 선택"
                        android:textSize="10dp"
                        android:paddingStart="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Order Confirmation -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_circle_gray" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주문 확인"
                        android:textSize="10dp"
                        android:paddingStart="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트메뉴 음료를 선택하세요"
                    android:textSize="16dp"
                    android:fontFamily="@font/jamsil_bold"
                    android:textColor="#000"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="10dp"/>
                <!-- 세트 / 라지세트 선택 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:id="@+id/button_drink1"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_background"
                        android:padding="5dp"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/coca_cola"
                            android:layout_gravity="center"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코카-콜라"
                            android:textColor="#000"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_drink2"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_background"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sprite"
                            android:layout_gravity="center"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="스프라이트"
                            android:textColor="#000"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_drink3"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coca_cola"
                        android:layout_gravity="center"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코카 콜라 제로"
                        android:textColor="#000"
                        android:textSize="14dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_nutrition_info"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="10dp"
                android:text="영양정보"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="버거 주문 취소"
                android:textColor="#000"
                android:background="@drawable/button_background"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <!-- 하단 버튼 영역 -->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/gotohome"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="처음으로"
                android:textSize="12dp"
                android:gravity="center"
                android:background="@drawable/button_background_gray"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" />

            <TextView
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="도움 기능"
                android:textSize="12dp"
                android:gravity="center"
                android:drawableLeft="@drawable/help_icon"
                android:background="@drawable/button_background_gray"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
